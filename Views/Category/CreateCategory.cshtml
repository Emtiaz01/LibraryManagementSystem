@model LibraryManagementSystem.Models.Category

<div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="col-md-6">
        <div class="card card-success">
            <div class="card-header text-center">
                <h3 class="card-title">Category Details</h3>
            </div>
            <div class="card-body">
                <form asp-action="CreateCategory" method="post">
                    <div class="form-group">
                        <label asp-for="BookName"></label>
                        <input asp-for="BookName" class="form-control" placeholder="Enter Book Name" />
                    </div>

                    <div class="form-group">
                        <label asp-for="CategoryName"></label>
                        <input asp-for="CategoryName" class="form-control" placeholder="Enter Category Name" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Description"></label>
                        <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter Description"></textarea>
                    </div>

                    <div class="text-center d-flex justify-content-between mt-4">
                        <!-- Save Button -->
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-save"></i> Save
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
